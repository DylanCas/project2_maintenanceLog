{{#if logged_in}}
<div class="sidenav">
  <a href="/vinForm">Add new vehicle</a>
  <section class="container">
    <section class="flex-row justify-center">
    {{#each vehicles as |vehicle|}}
      {{> vehiclecards vehicle}}
    {{/each}}
    </section>
  </section>
</div>
{{/if}}

{{#if vehicles.length}}
  <div class="col-md-6 vehicle-list">
    <h3>My Vehicles:</h3>

    {{#each vehicles as |vehicle|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/singleVehicle/{{vehicle.id}}">{{vehicle.make}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{vehicle.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/vinForm.js" type="text/javascript"></script>
