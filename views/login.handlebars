<div class="row" id="accContainer">
  
  <div class="col-md-6" id="login-con">
    

    <form class="form login-form" id="form-l">
      <h2>Login</h2>
      <div class="form-group1">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" name="email-login" required/>
      </div>
      <div class="form-group1">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" name="password-login" required/>
      </div>
      <div class="form-group1">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>

  <div class="col-md-6" id="signup-con">

    <form class="form signup-form">
      <h2>Signup</h2>
      <div class="form-group2">
        <label for="username-signup">Name:</label>
        <input class="form-input" type="text" id="username-signup" name="username-signup" required/>
      </div>
      <div class="form-group2">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" name="email-signup" required/>
      </div>
      <div class="form-group2">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" name="password-signup" required/>
      </div>
      <div class="form-group2">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<link rel="stylesheet" href="css/login.css">
<script src="/js/log.js"></script>
